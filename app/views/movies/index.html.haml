-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th{@order.equals('title') ? :class => "hilite" : null}= link_to "Movie Title", root_path({orderby: title})
      %th{@order.equals('rating') ? :class => "hilite" : null}= link_to "Rating", root_path({orderby: rating})
      %th{@order.equals('release_date') ? :class => "hilite" : null}= link_to "Release Date"
      %th "More Info"
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
